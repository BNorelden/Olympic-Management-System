<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/nameView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="165dp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Event Name"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/venueView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venue"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="165dp" />

            <EditText
                android:id="@+id/editVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Venue"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/catView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="165dp" />

            <EditText
                android:id="@+id/editCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Category"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="165dp" />

            <EditText
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Type of event"
                android:inputType="none|textPersonName"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="650dp" />

            <TextView
                android:id="@+id/strtDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Day"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="339dp" />

            <EditText
                android:id="@+id/stday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Start Date"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="685dp" />

            <TextView
                android:id="@+id/strtMth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Month"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="128dp"
                tools:layout_editor_absoluteY="355dp" />

            <EditText
                android:id="@+id/stmonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Start Month"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="328dp" />

            <TextView
                android:id="@+id/strtHr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Hour"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="301dp" />

            <EditText
                android:id="@+id/sthour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Start Hour"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/strtMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Minutes"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="364dp" />

            <EditText
                android:id="@+id/stmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Start Minutes"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/endDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Day"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="379dp" />

            <EditText
                android:id="@+id/endday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the End Day"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/endMnth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Month"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="451dp" />

            <EditText
                android:id="@+id/endmonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the End Month"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/endHr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Hour"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="87dp"
                tools:layout_editor_absoluteY="478dp" />

            <EditText
                android:id="@+id/endhour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the End Hour"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/endMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Minutes"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="489dp" />

            <EditText
                android:id="@+id/endmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the End Minutes"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/YEAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="442dp" />

            <EditText
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Year"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zone"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="498dp" />

            <EditText
                android:id="@+id/zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Zone"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="574dp" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Price"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/Seats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seats"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="554dp" />

            <EditText
                android:id="@+id/seats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Seats"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:text="Update Event" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>